{% extends "base.html.jinja" %}
{% block content %}

    <ul class="list-group">
        {% for product in products %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a class="nav-link href="{{url_for('product', product_id=product)}}"><i class="bi bi-card-list" style="color:rgb(163, 126, 214)"></i> {{product}}</a>
                <span class="badge bg-light rounded-pill" style="color:rgb(163, 126, 214)">{{loop.index}}</span>
            </li>
        {% endfor %}
    </ul>

{% endblock content %}